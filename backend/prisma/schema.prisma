generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Mission {
  id                String         @id @default(cuid())
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  isCompleted       Boolean        @default(false)
  name              String
  description       String
  locationLongitude Float
  locationLatitude  Float
  startTime         DateTime
  expectedEndTime   DateTime
  goal              String
  endTime           DateTime?
  drones            Drone[]        @relation("MissionDrones")
  MissionReport     MissionReport?
}

model ReportImage {
  id       Int           @id @default(autoincrement())
  reportId Int
  report   MissionReport @relation(fields: [reportId], references: [id])
}

model MissionReport {
  id            Int           @id @default(autoincrement())
  missionId     String        @unique
  droneId       String
  mission       Mission       @relation(fields: [missionId], references: [id])
  drone         Drone         @relation(fields: [droneId], references: [id])
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  reportDate    DateTime
  reportContent String?
  ReportImages  ReportImage[]
}

model Drone {
  id                         String   @id @unique
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @updatedAt
  isActive                   Boolean  @default(true)
  isOnMission                Boolean  @default(false)
  gotFlightPermit            Boolean  @default(false)
  currentLongitude           Float
  currentLatitude            Float
  name                       String
  description                String
  type                       String
  engineType                 String
  fuelOrBatteryLevel         Int
  maxSpeedKmh                Int
  maxDistanceKm              Int
  pricePerHourUSD            Int
  noiseLevelDb               Int
  lengthCm                   Int
  widthCm                    Int
  heightCm                   Int
  maxLoadKg                  Int
  specialization             String
  frequencyHz                Int?
  percentageMissionCompleted Float?

  missions      Mission[]       @relation("MissionDrones")
  MissionReport MissionReport[]
}
